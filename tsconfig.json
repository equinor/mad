{
    "$schema": "http://json.schemastore.org/tsconfig",
    "display": "Equinor MAD",
    "compilerOptions": {
        "allowJs": true,
        "target": "ES6",
        "module": "ES6",
        "moduleResolution": "Node",
        "strict": true,
        "lib": ["DOM", "ESNext"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "resolveJsonModule": true
    },
    "exclude": ["node_modules", "packages", "apps"]
}
