{
    "name": "mad",
    "version": "0.0.0",
    "devDependencies": {
        "@changesets/cli": "^2.27.7",
        "@types/node": "^18.13.0",
        "@typescript-eslint/eslint-plugin": "^7.14.1",
        "@typescript-eslint/parser": "^7.14.1",
        "eslint": "^8.46.0",
        "prettier": "3.4.2",
        "syncpack": "^13.0.0",
        "turbo": "^2.3.1",
        "typescript": "~5.8.3"
    },
    "engines": {
        "node": ">=20.0.0"
    },
    "packageManager": "yarn@4.5.1",
    "private": true,
    "scripts": {
        "build:all": "turbo run build",
        "build:auth": "turbo run build --filter @equinor/mad-auth",
        "build:chronicles": "turbo run build --filter @equinor/mad-chronicles",
        "build:components": "turbo run build --filter @equinor/mad-components",
        "build:core": "turbo run build --filter @equinor/mad-core",
        "build:dfw": "turbo run build --filter @equinor/mad-dfw",
        "build:docs": "turbo run build --filter @equinor/mad-platform-docs",
        "build:insights": "turbo run build --filter @equinor/mad-insights",
        "build:maintenance-api": "turbo run build --filter @equinor/mad-maintenance-api-ts-wrapper",
        "build:navigation": "turbo run build --filter @equinor/mad-navigation",
        "build:skia-draw": "turbo run build --filter @equinor/react-native-skia-draw",
        "build:toast": "turbo run build --filter @equinor/mad-toast",
        "clean:all": "turbo run clean && rm -rf node_modules .turbo .yarn",
        "dev:all": "turbo run dev",
        "dev:auth": "turbo run dev --filter @equinor/mad-auth",
        "dev:chronicles": "turbo run dev --filter @equinor/mad-chronicles",
        "dev:components": "turbo run dev --filter @equinor/mad-components",
        "dev:core": "turbo run dev --filter @equinor/mad-core",
        "dev:dfw": "turbo run dev --filter @equinor/mad-dfw",
        "dev:docs": "turbo run dev --filter @equinor/mad-platform-docs",
        "dev:insights": "turbo run dev --filter @equinor/mad-insights",
        "dev:navigation": "turbo run dev --filter @equinor/mad-navigation",
        "dev:skia-draw": "turbo run dev --filter @equinor/react-native-skia-draw",
        "dev:toast": "turbo run dev --filter @equinor/mad-toast",
        "docker:chronicles": "turbo run docker --filter @equinor/mad-chronicles",
        "fetch:tags": "git fetch origin --tags --force",
        "format:all": "prettier --write .",
        "generate:maintenance-api": "turbo run generate --filter @equinor/mad-maintenance-api-ts-wrapper --",
        "lint:all": "turbo run lint --continue --",
        "publish:all": "turbo run build && changeset version && changeset publish && yarn fetch:tags && git tag -f PROD  && yarn push:tags",
        "push:tags": "git push origin --tags -f && echo Check status: https://console.radix.equinor.com/applications/chronicles/jobs",
        "test:all": "turbo run test",
        "test:auth": "turbo run test --filter @equinor/mad-auth",
        "test:components": "turbo run test --filter @equinor/mad-components --",
        "test:core": "turbo run test --filter @equinor/mad-core",
        "test:dfw": "turbo run test --filter @equinor/mad-dfw --",
        "test:insights": "turbo run test --filter @equinor/mad-insights",
        "test:maintenance-api": "turbo run test --filter @equinor/mad-maintenance-api-ts-wrapper",
        "test:navigation": "turbo run test --filter @equinor/mad-navigation",
        "test:skia-draw": "turbo run test --filter @equinor/react-native-skia-draw",
        "test:toast": "turbo run test --filter @equinor/mad-toast",
        "web:chronicles": "turbo run web --filter @equinor/mad-chronicles"
    },
    "workspaces": [
        "apps/*",
        "packages/*",
        "packages/**/*"
    ]
}
