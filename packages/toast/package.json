{
    "name": "@equinor/mad-toast",
    "version": "0.1.2",
    "description": "Toast package built on top of `react-native-toast-message`",
    "type": "module",
    "scripts": {
        "build": "tsup-node && echo '\n ⚙️ Generating typescript declarations..' && tsc --project tsconfig.json --emitDeclarationOnly --declaration",
        "test": "jest",
        "dev": "tsup-node --watch --clean=false",
        "lint": "eslint src/",
        "clean": "rm -rf node_modules dist .turbo"
    },
    "keywords": [
        "react native",
        "toast",
        "toast message",
        "react-native-toast-message"
    ],
    "author": {
        "name": "Equinor Mobile App Delivery team (MAD)"
    },
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/equinor/mad/issues"
    },
    "homepage": "https://github.com/equinor/mad/",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "dependencies": {
        "@equinor/mad-components": "workspace:*",
        "react-native-toast-message": "^2.2.0"
    },
    "peerDependencies": {
        "react": ">=18.0",
        "react-dom": ">=18.0",
        "react-native": ">=0.70"
    },
    "devDependencies": {
        "@equinor/eslint-config-mad": "workspace:*"
    },
    "files": [
        "CODE_OF_CONDUCT.md",
        "LICENSE",
        "CHANGELOG.md",
        "dist"
    ]
}
